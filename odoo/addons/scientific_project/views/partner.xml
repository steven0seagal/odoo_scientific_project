<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_scientific_partner_tree" model="ir.ui.view">
        <field name="name">scientific.partner.tree</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <tree string="Partners" decoration-success="status=='active'" decoration-muted="status=='inactive'">
                <field name="name"/>
                <field name="organization"/>
                <field name="partner_type"/>
                <field name="collaboration_type"/>
                <field name="status"/>
                <field name="country"/>
                <field name="email"/>
                <field name="start_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_scientific_partner_form" model="ir.ui.view">
        <field name="name">scientific.partner.form</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <form string="Partner">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="organization"/>
                            <field name="partner_type"/>
                            <field name="collaboration_type"/>
                        </group>
                        <group>
                            <field name="email" widget="email"/>
                            <field name="phone"/>
                            <field name="website" widget="url"/>
                            <field name="country"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="project_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Address">
                            <group>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="city"/>
                                <field name="state"/>
                                <field name="zip"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_scientific_partner_kanban" model="ir.ui.view">
        <field name="name">scientific.partner.kanban</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <kanban default_group_by="partner_type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="organization"/>
                <field name="partner_type"/>
                <field name="collaboration_type"/>
                <field name="status"/>
                <field name="email"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="text-muted"><field name="organization"/></span>
                                    </div>
                                    <span t-if="record.status.raw_value == 'active'" class="badge badge-success">Active</span>
                                    <span t-if="record.status.raw_value == 'inactive'" class="badge badge-secondary">Inactive</span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-handshake-o"/> <field name="collaboration_type"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-envelope-o"/> <field name="email"/>
                                    </div>
                                    <div t-if="record.country.raw_value" class="text-muted">
                                        <i class="fa fa-globe"/> <field name="country"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_scientific_partner_search" model="ir.ui.view">
        <field name="name">scientific.partner.search</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <search string="Partners">
                <field name="name"/>
                <field name="organization"/>
                <field name="email"/>
                <field name="country"/>
                <field name="project_ids"/>
                <filter string="Active" name="active" domain="[('status','=','active')]"/>
                <filter string="Inactive" name="inactive" domain="[('status','=','inactive')]"/>
                <separator/>
                <filter string="Academic" name="academic" domain="[('partner_type','=','academic')]"/>
                <filter string="Industry" name="industry" domain="[('partner_type','=','industry')]"/>
                <filter string="Government" name="government" domain="[('partner_type','=','government')]"/>
                <separator/>
                <filter string="Research Collaboration" name="research" domain="[('collaboration_type','=','research')]"/>
                <filter string="Funding Partner" name="funding" domain="[('collaboration_type','=','funding')]"/>
                <filter string="Data Sharing" name="data_sharing" domain="[('collaboration_type','=','data_sharing')]"/>
                <group expand="0" string="Group By">
                    <filter string="Partner Type" name="group_partner_type" context="{'group_by':'partner_type'}"/>
                    <filter string="Collaboration Type" name="group_collaboration_type" context="{'group_by':'collaboration_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Country" name="group_country" context="{'group_by':'country'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_scientific_partner" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">scientific.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first partner or collaborator
            </p>
            <p>
                Manage research partners, collaborators, and external organizations involved in your scientific projects.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_partner"
              name="Partners"
              parent="scientific_project.menu_scientific_main"
              action="action_scientific_partner"
              sequence="70"/>
</odoo>
