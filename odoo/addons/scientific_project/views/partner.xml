<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Tree View -->
    <record id="view_scientific_partner_tree" model="ir.ui.view">
        <field name="name">scientific.partner.tree</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <tree string="Partners">
                <field name="name"/>
                <field name="partner_type"/>
                <field name="status" decoration-success="status=='active'"
                       decoration-muted="status=='former'"
                       decoration-info="status=='prospect'" widget="badge"/>
                <field name="collaboration_type"/>
                <field name="city"/>
                <field name="country"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="project_count"/>
                <field name="is_agreement_active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Partner Form View -->
    <record id="view_scientific_partner_form" model="ir.ui.view">
        <field name="name">scientific.partner.form</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <form string="Partner">
                <header>
                    <field name="status" widget="statusbar"
                           statusbar_visible="prospect,active,inactive"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_projects"
                                icon="fa-folder-open">
                            <field name="project_count" widget="statinfo" string="Projects"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Agreement Active" bg_color="bg-success"
                            attrs="{'invisible': [('is_agreement_active', '=', False)]}"/>

                    <field name="active" invisible="1"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Organization Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_type"/>
                            <field name="collaboration_type"/>
                            <field name="is_agreement_active" invisible="1"/>
                        </group>
                        <group>
                            <field name="website" widget="url" placeholder="https://example.com"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Contact Information">
                            <group>
                                <group>
                                    <field name="contact_person"/>
                                    <field name="email" widget="email"/>
                                    <field name="phone" widget="phone"/>
                                </group>
                                <group>
                                    <field name="street" placeholder="Street..."/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="state"/>
                                    <field name="zip_code"/>
                                    <field name="country"/>
                                </group>
                            </group>
                        </page>

                        <page string="Projects">
                            <field name="project_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="principal_investigator_id"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Contact Researchers">
                            <field name="researcher_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="specialization"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Agreement">
                            <group>
                                <group>
                                    <field name="agreement_start_date"/>
                                    <field name="agreement_end_date"/>
                                </group>
                                <group>
                                    <field name="agreement_document" filename="agreement_file_name"/>
                                    <field name="agreement_file_name" invisible="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Additional Information">
                            <group>
                                <field name="specialization" placeholder="Areas of expertise and specialization..."/>
                            </group>
                            <group>
                                <field name="notes" placeholder="Internal notes about this partner..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Partner Kanban View -->
    <record id="view_scientific_partner_kanban" model="ir.ui.view">
        <field name="name">scientific.partner.kanban</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <kanban default_group_by="partner_type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_type"/>
                <field name="status"/>
                <field name="collaboration_type"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="country"/>
                <field name="project_count"/>
                <field name="is_agreement_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge badge-pill" t-attf-class="badge-#{record.status.raw_value == 'active' ? 'success' : 'secondary'}">
                                    <field name="status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.collaboration_type.raw_value">
                                    <i class="fa fa-handshake-o"/> <field name="collaboration_type"/>
                                </div>
                                <div t-if="record.contact_person.raw_value">
                                    <i class="fa fa-user"/> <field name="contact_person"/>
                                </div>
                                <div t-if="record.email.raw_value">
                                    <i class="fa fa-envelope"/> <field name="email"/>
                                </div>
                                <div t-if="record.phone.raw_value">
                                    <i class="fa fa-phone"/> <field name="phone"/>
                                </div>
                                <div t-if="record.city.raw_value or record.country.raw_value">
                                    <i class="fa fa-map-marker"/>
                                    <span t-if="record.city.raw_value"><field name="city"/>, </span>
                                    <field name="country"/>
                                </div>
                                <div t-if="record.project_count.raw_value &gt; 0">
                                    <i class="fa fa-folder-open"/> <field name="project_count"/> projects
                                </div>
                                <div t-if="record.is_agreement_active.raw_value" class="text-success">
                                    <i class="fa fa-check-circle"/> Agreement Active
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Partner Search View -->
    <record id="view_scientific_partner_search" model="ir.ui.view">
        <field name="name">scientific.partner.search</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <search string="Partners">
                <field name="name"/>
                <field name="partner_type"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="city"/>
                <field name="country"/>

                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Prospect" name="prospect" domain="[('status', '=', 'prospect')]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>

                <separator/>
                <filter string="Agreement Active" name="agreement_active" domain="[('is_agreement_active', '=', True)]"/>

                <separator/>
                <filter string="University" name="university" domain="[('partner_type', '=', 'university')]"/>
                <filter string="Industry" name="industry" domain="[('partner_type', '=', 'industry')]"/>
                <filter string="Government" name="government" domain="[('partner_type', '=', 'government')]"/>

                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Partner Type" name="group_type" context="{'group_by': 'partner_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Collaboration Type" name="group_collaboration" context="{'group_by': 'collaboration_type'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Partner Action -->
    <record id="action_scientific_partner" model="ir.actions.act_window">
        <field name="name">Partners &amp; Collaborators</field>
        <field name="res_model">scientific.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first research partner!
            </p>
            <p>
                Track external collaborators, industry partners, and funding agencies.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_partner"
              name="Partners"
              parent="menu_scientific_project"
              action="action_scientific_partner"
              sequence="60"/>
</odoo>
