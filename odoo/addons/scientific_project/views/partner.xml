<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Tree View -->
    <record id="view_scientific_partner_tree" model="ir.ui.view">
        <field name="name">scientific.partner.tree</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <tree string="Partners">
                <field name="name"/>
                <field name="partner_type"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="collaboration_status" decoration-success="collaboration_status=='active'"
                       decoration-info="collaboration_status=='potential'"
                       decoration-muted="collaboration_status in ['inactive','completed']"/>
                <field name="project_count"/>
                <field name="city"/>
                <field name="country"/>
            </tree>
        </field>
    </record>

    <!-- Partner Form View -->
    <record id="view_scientific_partner_form" model="ir.ui.view">
        <field name="name">scientific.partner.form</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <form string="Partner">
                <header>
                    <field name="collaboration_status" widget="statusbar"
                           statusbar_visible="potential,active,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_projects"
                                icon="fa-folder">
                            <field string="Projects" name="project_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object"
                                icon="fa-tasks">
                            <field string="Active" name="active_projects" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_type"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group>
                            <field name="collaboration_start_date"/>
                            <field name="collaboration_end_date"/>
                            <field name="is_active" invisible="1"/>
                        </group>
                    </group>
                    <group string="Contact Information">
                        <group>
                            <field name="contact_person"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                            <field name="state"/>
                            <field name="zip"/>
                            <field name="country"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Collaboration Details" name="collaboration">
                            <group>
                                <field name="description" placeholder="Description of the partner organization..."/>
                                <field name="areas_of_expertise" placeholder="List areas of expertise..."/>
                            </group>
                        </page>
                        <page string="Projects" name="projects">
                            <field name="project_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="document_ids"/>
                        </page>
                        <page string="Contact Researchers" name="researchers">
                            <field name="researcher_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Partner Kanban View -->
    <record id="view_scientific_partner_kanban" model="ir.ui.view">
        <field name="name">scientific.partner.kanban</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <kanban default_group_by="partner_type" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="partner_type"/>
                <field name="collaboration_status"/>
                <field name="project_count"/>
                <field name="email"/>
                <field name="phone"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="o_kanban_record_top_right">
                                    <field name="collaboration_status" widget="label"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.contact_person.raw_value">
                                    <i class="fa fa-user"/> <field name="contact_person"/>
                                </div>
                                <div t-if="record.email.raw_value">
                                    <i class="fa fa-envelope"/> <field name="email"/>
                                </div>
                                <div t-if="record.phone.raw_value">
                                    <i class="fa fa-phone"/> <field name="phone"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span>
                                        <i class="fa fa-folder"/> <field name="project_count"/> Projects
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Partner Search View -->
    <record id="view_scientific_partner_search" model="ir.ui.view">
        <field name="name">scientific.partner.search</field>
        <field name="model">scientific.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partners">
                <field name="name"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="city"/>
                <field name="country"/>
                <field name="areas_of_expertise"/>
                <filter string="Active" name="active" domain="[('collaboration_status','=','active')]"/>
                <filter string="Potential" name="potential" domain="[('collaboration_status','=','potential')]"/>
                <filter string="Inactive" name="inactive" domain="[('collaboration_status','=','inactive')]"/>
                <separator/>
                <filter string="University" name="university" domain="[('partner_type','=','university')]"/>
                <filter string="Industry" name="industry" domain="[('partner_type','=','industry')]"/>
                <filter string="Government" name="government" domain="[('partner_type','=','government')]"/>
                <separator/>
                <filter string="Has Active Projects" name="has_active_projects"
                        domain="[('active_projects','>',0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by':'partner_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'collaboration_status'}"/>
                    <filter string="Country" name="group_country" context="{'group_by':'country'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Partner Action -->
    <record id="action_scientific_partner" model="ir.actions.act_window">
        <field name="name">Partners &amp; Collaborators</field>
        <field name="res_model">scientific.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_scientific_partner_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first partner or collaborator
            </p>
            <p>
                Manage external partners, collaborators, and research institutions.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_partner"
              name="Partners"
              parent="menu_scientific_project_root"
              action="action_scientific_partner"
              sequence="50"/>
</odoo>
