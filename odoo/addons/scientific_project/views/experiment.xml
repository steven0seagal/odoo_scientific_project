<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="experiment_action" model="ir.actions.act_window">
        <field name="name">Experiments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.experiment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new experiment
            </p>
        </field>
    </record>

    <!-- List view for experiments -->
    <record model="ir.ui.view" id="experiment_list_view">
        <field name="name">scientific.experiment.list</field>
        <field name="model">scientific.experiment</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_overdue" decoration-success="status=='completed'" decoration-muted="status=='cancelled'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="status" decoration-success="status=='completed'"
                       decoration-info="status=='in_progress'"
                       decoration-warning="status=='planning'"
                       decoration-muted="status=='cancelled'"/>
                <field name="priority" widget="priority"/>
                <field name="assigned_researcher_count"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration_days" optional="show"/>
                <field name="report_created" optional="show"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form view for creating and editing experiments -->
    <record model="ir.ui.view" id="experiment_form_view">
        <field name="name">scientific.experiment.form</field>
        <field name="model">scientific.experiment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_planning" string="Planning" type="object" states="in_progress,completed,cancelled"/>
                    <button name="action_in_progress" string="Start Experiment" type="object" class="oe_highlight" states="planning"/>
                    <button name="action_completed" string="Complete" type="object" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancelled" string="Cancel" type="object" states="planning,in_progress"/>
                    <button name="action_create_report" string="Create Report" type="object" class="oe_highlight"
                            attrs="{'invisible': [('report_created', '=', True)]}"/>
                    <button name="action_clone_experiment" string="Clone" type="object" icon="fa-copy"/>
                    <field name="status" widget="statusbar" statusbar_visible="planning,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_researchers" icon="fa-users">
                            <field string="Researchers" name="assigned_researcher_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_equipment" icon="fa-wrench">
                            <field string="Equipment" name="equipment_count" widget="statinfo"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Overdue" bg_color="bg-danger" attrs="{'invisible': [('is_overdue', '=', False)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Experiment Title..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="priority" widget="priority"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_days" attrs="{'invisible': [('duration_days', '=', 0)]}"/>
                        </group>
                        <group>
                            <field name="report_created"/>
                            <field name="completion_status"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Hypothesis &amp; Methodology" name="hypothesis">
                            <group>
                                <field name="introduction" placeholder="Introduction to the experiment..."/>
                                <field name="hypothesis" placeholder="State your hypothesis..."/>
                                <field name="methodology" placeholder="Describe the experimental methodology..."/>
                            </group>
                        </page>
                        <page string="Results &amp; Conclusion" name="results">
                            <group>
                                <field name="results" placeholder="Record experimental results..."/>
                                <field name="conclusion" placeholder="Draw conclusions from results..."/>
                            </group>
                        </page>
                        <page string="Team" name="team">
                            <field name="assigned_to_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Equipment" name="equipment">
                            <field name="equipment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="equipment_type"/>
                                    <field name="status"/>
                                    <field name="location"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="document_id"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action for experiments -->
    <record id="project_experiment_action" model="ir.actions.act_window">
        <field name="name">Experiments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.experiment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new experiment
            </p>
        </field>
    </record>

    <!-- Action for experiments (alternative naming for consistency) -->
    <record id="action_scientific_experiment" model="ir.actions.act_window">
        <field name="name">Experiments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.experiment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new experiment
            </p>
        </field>
    </record>



    <!-- Menu item for experiments -->
    <menuitem id="project_experiment_menu"
              name="Experiments"
              parent="scientific_projects_root"
              action="project_experiment_action"
              sequence="13"/>

</odoo>