<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Data Management Tree View -->
    <record id="view_scientific_data_management_tree" model="ir.ui.view">
        <field name="name">scientific.data_management.tree</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <tree string="Data Management">
                <field name="name"/>
                <field name="data_type"/>
                <field name="status" decoration-success="status=='validated'"
                       decoration-muted="status=='archived'"
                       decoration-warning="status=='draft'" widget="badge"/>
                <field name="access_level" decoration-danger="access_level=='confidential'"
                       decoration-warning="access_level=='restricted'" widget="badge"/>
                <field name="file_size"/>
                <field name="version"/>
                <field name="project_id"/>
                <field name="researcher_id"/>
                <field name="upload_date"/>
                <field name="is_expired" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Data Management Form View -->
    <record id="view_scientific_data_management_form" model="ir.ui.view">
        <field name="name">scientific.data_management.form</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <form string="Data Management">
                <header>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,validated,archived"/>
                    <button name="action_validate" string="Validate" type="object"
                            states="draft" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_project"
                                icon="fa-folder" attrs="{'invisible': [('project_id', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Project</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger"
                            attrs="{'invisible': [('is_expired', '=', False)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dataset Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="data_type"/>
                            <field name="access_level"/>
                            <field name="version"/>
                            <field name="researcher_id"/>
                        </group>
                        <group>
                            <field name="collection_date"/>
                            <field name="upload_date"/>
                            <field name="expiry_date"/>
                            <field name="is_expired" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Describe this dataset..."/>
                    </group>

                    <notebook>
                        <page string="File &amp; Storage">
                            <group>
                                <group>
                                    <field name="file_attachment" filename="file_name"/>
                                    <field name="file_name" invisible="1"/>
                                    <field name="file_size" widget="float" string="File Size (MB)"/>
                                </group>
                                <group>
                                    <field name="storage_location"/>
                                    <field name="storage_path"/>
                                    <field name="checksum" placeholder="MD5 or SHA256 checksum"/>
                                </group>
                            </group>
                        </page>

                        <page string="Relationships">
                            <group>
                                <field name="project_id"/>
                                <field name="experiment_id"/>
                            </group>
                        </page>

                        <page string="Metadata">
                            <group>
                                <field name="keywords" placeholder="keyword1, keyword2, keyword3"/>
                            </group>
                            <field name="metadata" placeholder="Additional metadata in JSON format..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Data Management Kanban View -->
    <record id="view_scientific_data_management_kanban" model="ir.ui.view">
        <field name="name">scientific.data_management.kanban</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="data_type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="data_type"/>
                <field name="status"/>
                <field name="access_level"/>
                <field name="file_size"/>
                <field name="version"/>
                <field name="is_expired"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge badge-pill" t-attf-class="badge-#{record.status.raw_value == 'validated' ? 'success' : 'warning'}">
                                    <field name="status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-lock"/> <field name="access_level"/>
                                </div>
                                <div t-if="record.file_size.raw_value &gt; 0">
                                    <i class="fa fa-file"/> <field name="file_size"/> MB
                                </div>
                                <div>
                                    <i class="fa fa-code-fork"/> v<field name="version"/>
                                </div>
                                <div t-if="record.is_expired.raw_value" class="text-danger">
                                    <i class="fa fa-exclamation-triangle"/> Expired
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Data Management Search View -->
    <record id="view_scientific_data_management_search" model="ir.ui.view">
        <field name="name">scientific.data_management.search</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <search string="Data Management">
                <field name="name"/>
                <field name="data_type"/>
                <field name="project_id"/>
                <field name="experiment_id"/>
                <field name="researcher_id"/>
                <field name="keywords"/>

                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Validated" name="validated" domain="[('status', '=', 'validated')]"/>
                <filter string="Archived" name="archived" domain="[('status', '=', 'archived')]"/>

                <separator/>
                <filter string="Confidential" name="confidential" domain="[('access_level', '=', 'confidential')]"/>
                <filter string="Restricted" name="restricted" domain="[('access_level', '=', 'restricted')]"/>

                <separator/>
                <filter string="Expired" name="expired" domain="[('is_expired', '=', True)]"/>
                <filter string="Active" name="active" domain="[('is_expired', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Data Type" name="group_data_type" context="{'group_by': 'data_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Access Level" name="group_access" context="{'group_by': 'access_level'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Owner" name="group_owner" context="{'group_by': 'researcher_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Data Management Action -->
    <record id="action_scientific_data_management" model="ir.actions.act_window">
        <field name="name">Data Management</field>
        <field name="res_model">scientific.data_management</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload your first dataset!
            </p>
            <p>
                Manage research data files, track versions, and control access.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_data_management"
              name="Data Management"
              parent="menu_scientific_project"
              action="action_scientific_data_management"
              sequence="50"/>
</odoo>
