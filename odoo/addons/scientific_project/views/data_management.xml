<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Data Management Tree View -->
    <record id="view_scientific_data_management_tree" model="ir.ui.view">
        <field name="name">scientific.data_management.tree</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <tree string="Data Management">
                <field name="name"/>
                <field name="data_type"/>
                <field name="file_format"/>
                <field name="file_size"/>
                <field name="status" decoration-success="status=='validated'"
                       decoration-info="status=='draft'"
                       decoration-muted="status=='archived'"/>
                <field name="access_level"/>
                <field name="project_id"/>
                <field name="researcher_id"/>
                <field name="upload_date"/>
                <field name="is_recent" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Data Management Form View -->
    <record id="view_scientific_data_management_form" model="ir.ui.view">
        <field name="name">scientific.data_management.form</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <form string="Data Management">
                <header>
                    <button name="action_validate" string="Validate" type="object"
                            class="oe_highlight" states="draft"/>
                    <button name="action_archive_data" string="Archive" type="object"
                            states="draft,validated"/>
                    <button name="action_create_backup" string="Create Backup" type="object"
                            class="oe_highlight"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,validated,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                icon="fa-calendar">
                            <field string="Days Old" name="age_days" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="data_type"/>
                            <field name="file_format"/>
                            <field name="file_size"/>
                            <field name="version"/>
                        </group>
                        <group>
                            <field name="access_level"/>
                            <field name="storage_location"/>
                            <field name="checksum"/>
                            <field name="is_recent" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="experiment_id"/>
                            <field name="researcher_id"/>
                        </group>
                        <group>
                            <field name="upload_date"/>
                            <field name="validation_date"/>
                            <field name="archive_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the dataset..."/>
                        </page>
                        <page string="Metadata" name="metadata">
                            <field name="metadata" placeholder="Enter metadata in JSON format..."/>
                        </page>
                        <page string="Related Documents" name="documents">
                            <field name="document_ids"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Data Management Kanban View -->
    <record id="view_scientific_data_management_kanban" model="ir.ui.view">
        <field name="name">scientific.data_management.kanban</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="data_type" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="data_type"/>
                <field name="file_size"/>
                <field name="status"/>
                <field name="is_recent"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="o_kanban_record_top_right">
                                    <field name="status" widget="label"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-file-o"/> <field name="file_format"/>
                                    (<field name="file_size"/> MB)
                                </div>
                                <div t-if="record.is_recent.raw_value">
                                    <span class="badge badge-success">Recent</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="project_id"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="researcher_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Data Management Search View -->
    <record id="view_scientific_data_management_search" model="ir.ui.view">
        <field name="name">scientific.data_management.search</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <search string="Search Data">
                <field name="name"/>
                <field name="data_type"/>
                <field name="file_format"/>
                <field name="project_id"/>
                <field name="researcher_id"/>
                <field name="experiment_id"/>
                <filter string="Recent" name="recent" domain="[('is_recent','=',True)]"/>
                <filter string="Draft" name="draft" domain="[('status','=','draft')]"/>
                <filter string="Validated" name="validated" domain="[('status','=','validated')]"/>
                <filter string="Archived" name="archived" domain="[('status','=','archived')]"/>
                <separator/>
                <filter string="Raw Data" name="raw_data" domain="[('data_type','=','raw_data')]"/>
                <filter string="Processed Data" name="processed_data" domain="[('data_type','=','processed_data')]"/>
                <filter string="Analysis" name="analysis" domain="[('data_type','=','analysis')]"/>
                <separator/>
                <filter string="My Data" name="my_data" domain="[('researcher_id.user_id','=',uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Data Type" name="group_type" context="{'group_by':'data_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Access Level" name="group_access" context="{'group_by':'access_level'}"/>
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Owner" name="group_owner" context="{'group_by':'researcher_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Data Management Action -->
    <record id="action_scientific_data_management" model="ir.actions.act_window">
        <field name="name">Data Management</field>
        <field name="res_model">scientific.data_management</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_scientific_data_management_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dataset
            </p>
            <p>
                Manage research data, track versions, and control access.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_data_management"
              name="Data Management"
              parent="scientific_root"
              action="action_scientific_data_management"
              sequence="45"/>
</odoo>
