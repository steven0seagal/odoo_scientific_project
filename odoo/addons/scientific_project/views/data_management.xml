<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_scientific_data_management_tree" model="ir.ui.view">
        <field name="name">scientific.data_management.tree</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <tree string="Data Management" decoration-success="access_level=='public'" decoration-danger="access_level=='confidential'" decoration-warning="access_level=='restricted'">
                <field name="name"/>
                <field name="data_type"/>
                <field name="format"/>
                <field name="file_size" widget="integer"/>
                <field name="version"/>
                <field name="access_level"/>
                <field name="upload_date"/>
                <field name="project_id"/>
                <field name="researcher_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_scientific_data_management_form" model="ir.ui.view">
        <field name="name">scientific.data_management.form</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <form string="Data Management">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="data_type"/>
                            <field name="format"/>
                            <field name="version"/>
                            <field name="access_level"/>
                        </group>
                        <group>
                            <field name="upload_date"/>
                            <field name="last_modified"/>
                            <field name="file_size" widget="integer" readonly="1"/>
                            <field name="storage_location"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="experiment_id"/>
                            <field name="researcher_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="File">
                            <group>
                                <field name="file" filename="file_name"/>
                                <field name="file_name" readonly="1"/>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_scientific_data_management_kanban" model="ir.ui.view">
        <field name="name">scientific.data_management.kanban</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="data_type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="data_type"/>
                <field name="format"/>
                <field name="file_size"/>
                <field name="access_level"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="badge badge-pill"><field name="format"/></span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-lock"/> <field name="access_level"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-hdd-o"/> Size: <field name="file_size"/> bytes
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-calendar"/> <field name="upload_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_scientific_data_management_search" model="ir.ui.view">
        <field name="name">scientific.data_management.search</field>
        <field name="model">scientific.data_management</field>
        <field name="arch" type="xml">
            <search string="Data Management">
                <field name="name"/>
                <field name="project_id"/>
                <field name="experiment_id"/>
                <field name="researcher_id"/>
                <filter string="Raw Data" name="raw_data" domain="[('data_type','=','raw_data')]"/>
                <filter string="Processed Data" name="processed_data" domain="[('data_type','=','processed_data')]"/>
                <filter string="Analysis Results" name="analysis_results" domain="[('data_type','=','analysis_results')]"/>
                <separator/>
                <filter string="Public" name="public" domain="[('access_level','=','public')]"/>
                <filter string="Internal" name="internal" domain="[('access_level','=','internal')]"/>
                <filter string="Restricted" name="restricted" domain="[('access_level','=','restricted')]"/>
                <filter string="Confidential" name="confidential" domain="[('access_level','=','confidential')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('upload_date','&gt;=',datetime.datetime.now().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Data Type" name="group_data_type" context="{'group_by':'data_type'}"/>
                    <filter string="Format" name="group_format" context="{'group_by':'format'}"/>
                    <filter string="Access Level" name="group_access_level" context="{'group_by':'access_level'}"/>
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Experiment" name="group_experiment" context="{'group_by':'experiment_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_scientific_data_management" model="ir.actions.act_window">
        <field name="name">Data Management</field>
        <field name="res_model">scientific.data_management</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload your first dataset
            </p>
            <p>
                Manage research data, datasets, analysis results and metadata with version control and access management.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_data_management"
              name="Data Management"
              parent="scientific_project.menu_scientific_main"
              action="action_scientific_data_management"
              sequence="60"/>
</odoo>
