<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Publication Tree View -->
    <record id="view_scientific_publication_tree" model="ir.ui.view">
        <field name="name">scientific.publication.tree</field>
        <field name="model">scientific.publication</field>
        <field name="arch" type="xml">
            <tree string="Publications">
                <field name="title"/>
                <field name="authors_ids" widget="many2many_tags"/>
                <field name="journal_conference"/>
                <field name="publication_type"/>
                <field name="status" decoration-success="status=='published'"
                       decoration-info="status in ['submitted','under_review']"
                       decoration-warning="status=='accepted'"
                       decoration-muted="status=='draft'"/>
                <field name="publication_date"/>
                <field name="project_id"/>
                <field name="citation_count"/>
            </tree>
        </field>
    </record>

    <!-- Publication Form View -->
    <record id="view_scientific_publication_form" model="ir.ui.view">
        <field name="name">scientific.publication.form</field>
        <field name="model">scientific.publication</field>
        <field name="arch" type="xml">
            <form string="Publication">
                <header>
                    <button name="action_submit" string="Submit" type="object"
                            class="oe_highlight" states="draft"/>
                    <button name="action_under_review" string="Under Review" type="object"
                            class="oe_highlight" states="submitted"/>
                    <button name="action_accept" string="Accept" type="object"
                            class="oe_highlight" states="under_review"/>
                    <button name="action_publish" string="Publish" type="object"
                            class="oe_highlight" states="accepted"/>
                    <button name="action_reject" string="Reject" type="object"
                            states="submitted,under_review"/>
                    <field name="status" widget="statusbar"
                           statusbar_visible="draft,submitted,under_review,accepted,published"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="%(action_scientific_experiment)d"
                                icon="fa-flask" context="{'search_default_project_id': active_id}">
                            <field string="Experiments" name="experiment_ids" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="publication_type"/>
                            <field name="journal_conference"/>
                            <field name="doi"/>
                            <field name="url" widget="url"/>
                        </group>
                        <group>
                            <field name="publication_date"/>
                            <field name="submission_date"/>
                            <field name="acceptance_date"/>
                            <field name="impact_factor"/>
                            <field name="citation_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="authors_ids" widget="many2many_tags"/>
                        <field name="project_id"/>
                        <field name="keywords"/>
                    </group>
                    <notebook>
                        <page string="Abstract" name="abstract">
                            <field name="abstract" widget="html"/>
                        </page>
                        <page string="Related Items" name="relations">
                            <group>
                                <field name="experiment_ids" widget="many2many_tags"/>
                                <field name="task_ids" widget="many2many_tags"/>
                                <field name="document_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Citation" name="citation">
                            <group>
                                <field name="citation_info" readonly="1"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Publication Kanban View -->
    <record id="view_scientific_publication_kanban" model="ir.ui.view">
        <field name="name">scientific.publication.kanban</field>
        <field name="model">scientific.publication</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="id"/>
                <field name="title"/>
                <field name="journal_conference"/>
                <field name="publication_date"/>
                <field name="status"/>
                <field name="authors_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="title"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="journal_conference"/>
                                <br/>
                                <field name="authors_ids" widget="many2many_tags"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="publication_date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="publication_type" widget="label"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Publication Search View -->
    <record id="view_scientific_publication_search" model="ir.ui.view">
        <field name="name">scientific.publication.search</field>
        <field name="model">scientific.publication</field>
        <field name="arch" type="xml">
            <search string="Search Publications">
                <field name="title"/>
                <field name="authors_ids"/>
                <field name="journal_conference"/>
                <field name="doi"/>
                <field name="project_id"/>
                <filter string="Draft" name="draft" domain="[('status','=','draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('status','=','submitted')]"/>
                <filter string="Under Review" name="under_review" domain="[('status','=','under_review')]"/>
                <filter string="Published" name="published" domain="[('status','=','published')]"/>
                <separator/>
                <filter string="Journal Article" name="journal_article" domain="[('publication_type','=','journal_article')]"/>
                <filter string="Conference Paper" name="conference_paper" domain="[('publication_type','=','conference_paper')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Type" name="group_type" context="{'group_by':'publication_type'}"/>
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Publication Date" name="group_date" context="{'group_by':'publication_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Publication Action -->
    <record id="action_scientific_publication" model="ir.actions.act_window">
        <field name="name">Publications</field>
        <field name="res_model">scientific.publication</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_scientific_publication_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first publication
            </p>
            <p>
                Track and manage scientific publications, journal articles, and conference papers.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_scientific_publication"
              name="Publications"
              parent="menu_scientific_project_root"
              action="action_scientific_publication"
              sequence="40"/>
</odoo>
