<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  View all projects    -->
    <record id="project_action_all" model="ir.actions.act_window">
        <field name="name">All Projects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.project</field>
        <field name="view_mode">tree,kanban,form,gantt,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new scientific project
            </p>
        </field>
    </record>

    <!-- List view for projects -->
    <record model="ir.ui.view" id="project_project_list_view">
        <field name="name">scientific.project.list</field>
        <field name="model">scientific.project</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_overdue" decoration-success="status=='done'" decoration-muted="status=='cancelled'">
                <field name="name"/>
                <field name="principal_investigator_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_remaining" optional="show"/>
                <field name="status" decoration-success="status=='done'"
                       decoration-info="status=='in_progress'"
                       decoration-muted="status in ['draft','cancelled']"/>
                <field name="experiment_count"/>
                <field name="task_count"/>
                <field name="completion_percentage" widget="progressbar"/>
                <field name="total_budget" optional="hide"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Kanban view for projects and set default grouping by status   -->
    <record model="ir.ui.view" id="project_project_kanban_view">
        <field name="name">scientific.project.kanban</field>
        <field name="model">scientific.project</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_card_header">
                                    <div class="oe_kanban_card_header_title">
                                        Name:
                                        <field name="name"/>
                                    </div>
                                    <div class="oe_kanban_card_header_status">
                                        <field name="status" />
                                    </div>
                                </div>
                                <div class="oe_kanban_card_content">
                                    <field name="description"/>
                                </div>
                                <div class="oe_kanban_card_footer">
                                    <div class="oe_kanban_card_footer_start_date">
                                        <field name="start_date"/>
                                    </div>
                                    <div class="oe_kanban_card_footer_end_date">
                                        <field name="end_date"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>

    </record>



<!-- Form view for creating and editing projects -->
    <record model="ir.ui.view" id="project_project_form_view">
        <field name="name">scientific.project.form</field>
        <field name="model">scientific.project</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_draft" string="Set to Draft" type="object" states="in_progress,done,cancelled"/>
                    <button name="action_in_progress" string="Start Project" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_done" string="Mark as Done" type="object" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancelled" string="Cancel" type="object" states="draft,in_progress"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_experiments" icon="fa-flask">
                            <field string="Experiments" name="experiment_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_tasks" icon="fa-tasks">
                            <field string="Tasks" name="task_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_publications" icon="fa-book">
                            <field string="Publications" name="publication_count" widget="statinfo"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Overdue" bg_color="bg-danger" attrs="{'invisible': [('is_overdue', '=', False)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Name..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="principal_investigator_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="days_remaining" attrs="{'invisible': [('end_date', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="total_budget" widget="monetary"/>
                            <field name="completion_percentage" widget="progressbar"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Project description..."/>
                    </group>

                    <notebook>
                        <page string="Collaborators">
                            <field name="collaborators_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Funding">
                            <field name="funding">
                                <tree editable="bottom">
                                    <field name="source"/>
                                    <field name="budget"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents">
                            <field name="document_id"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh':True}" help="Follow this project to automatically track the events associated to tasks and issues of this project." groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Calendar View with default view on months -->
    <record id="view_project_calendar" model="ir.ui.view">
        <field name="name">scientific.project.calendar</field>
        <field name="model">scientific.project</field>
        <field name="arch" type="xml">
            <calendar string="Projects" date_start="start_date" date_stop="end_date" mode="month" create="true" color="status">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <!-- Gantt View for Projects -->
    <record id="view_project_gantt" model="ir.ui.view">
        <field name="name">scientific.project.gantt</field>
        <field name="model">scientific.project</field>
        <field name="arch" type="xml">
            <gantt string="Projects Gantt"
                   date_start="start_date"
                   date_stop="end_date"
                   default_group_by="principal_investigator_id"
                   color="status">
                <field name="name"/>
                <field name="status"/>
                <field name="completion_percentage"/>
            </gantt>
        </field>
    </record>

    <!-- Search View for Projects -->
    <record id="view_project_search" model="ir.ui.view">
        <field name="name">scientific.project.search</field>
        <field name="model">scientific.project</field>
        <field name="arch" type="xml">
            <search string="Search Projects">
                <field name="name"/>
                <field name="principal_investigator_id"/>
                <field name="status"/>
                <filter string="My Projects" name="my_projects"
                        domain="[('principal_investigator_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('status', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="PI" name="group_pi" context="{'group_by': 'principal_investigator_id'}"/>
                    <filter string="Start Date" name="group_start" context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Project action-->
    <record id="project_action" model="ir.actions.act_window">
        <field name="name">My Projects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.project</field>
        <field name="view_mode">kanban,tree,form,gantt,calendar</field>
        <field name="search_view_id" ref="view_project_search"/>
        <field name="context">{'search_default_my_projects': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new scientific project
            </p>
        </field>
    </record>


    <!--Popout window for creating projects    -->
    <record model="ir.actions.act_window" id="project_action_popout">
        <field name="name">Create Project</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.project</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Create new project    -->
    <record model="ir.actions.act_window" id="project_action_new">
        <field name="name">Create Project</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.project</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="scientific_root"
              name="Scientific Project"
              sequence="10"/>

    <menuitem id="scientific_projects_root"
              name="Projects"
              parent="scientific_root"
              sequence="10"/>

    <menuitem id="scientific_project_menu_all"
            name="All Projects"
            parent="scientific_projects_root"
            action="project_action_all"
            sequence="10"/>



</odoo>
