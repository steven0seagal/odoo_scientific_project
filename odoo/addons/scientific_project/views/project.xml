<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--MODEL MAIN VIEW    -->
    <record id="project_action" model="ir.actions.act_window">
        <field name="name">Scientific</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scientific.project</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new scientific project
            </p>
        </field>
    </record>
    <!-- List view for projects -->
    <record model="ir.ui.view" id="project_project_list_view">
        <field name="name">scientific.project.list</field>
        <field name="model">scientific.project</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

<!-- Form view for creating and editing projects -->
    <record model="ir.ui.view" id="project_project_form_view">
        <field name="name">scientific.project.form</field>
        <field name="model">scientific.project</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="description"/>
                </group>
                <group>
                    <field name="tasks" widget="one2many_list"/>
                </group>
            </form>
        </field>
    </record>

    <!-- List view for tasks -->
    <record model="ir.ui.view" id="project_task_list_view">
        <field name="name">scientific.task.list</field>
        <field name="model">scientific.task</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view for creating and editing tasks -->
    <record model="ir.ui.view" id="project_task_form_view">
        <field name="name">scientific.task.form</field>
        <field name="model">scientific.task</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="description"/>
                </group>
                <group>
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="scientific_root"
              name="Scientific"
              sequence="10"/>

    <menuitem id="scientific_projects_root"
              name="Projects"
              parent="scientific_root"
              sequence="10"/>

    <menuitem id="scientific_project"
              name="Project"
              parent="scientific_root"
              action="project_action"
              sequence="10"/>

</odoo>
